{
  "name": "Spotty",
  "version": "1.0",
  "description": "UI enhancement for spotlightstores.com",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions":
  [
    "tabs",
    "http://www.spotlightstores.com/*",
    "https://www.spotlightstores.com/*"
  ],
  "browser_action": {
    "default_icon": "icon-off.png",
    "default_title": "icon"
  },
  "manifest_version": 2
}